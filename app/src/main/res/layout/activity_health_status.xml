<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#89cff0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBTN_HS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_west_24" />

        </RelativeLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hRatePic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/heart_rate" />

            <EditText
                android:id="@+id/hRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:hint="Heart Rate"
                android:textColorHint="#72000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/bPreasurePic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/blood_preasure" />

            <EditText
                android:id="@+id/bPressure"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Blood Pressure"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/bGlucoseLvlPic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/blood_glucose" />

            <EditText
                android:id="@+id/bGlucoseLvl"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Blood Glucose Level"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/bOxyLvlPic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/blood_oxygen" />

            <EditText
                android:id="@+id/bOxyLvl"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Blood Oxygen Level"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/deepSleepPic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/deep_sleep" />

            <EditText
                android:id="@+id/deepSleep"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Deep Sleep"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/bmiPic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/bmi_pic" />

            <EditText
                android:id="@+id/bmi"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="BMI"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/metabolicAgePic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/metabolism_pic" />

            <EditText
                android:id="@+id/metabolicAge"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Metabolic Age"
                android:textColorHint="#72000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/insert_data_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple_500"
                android:text="Insert Data"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>